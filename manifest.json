{"background": {
  "scripts": ["2.1.0_0/scripts/background.js" ]
},

  "version": "0.1",
  "name": "TextAnalysis",
  "manifest_version": 2,
  "description": "Perform text analysis on Facebook posts",
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "Facebook posts analysis",
    "default_popup": "popup.html"
  },
  "permissions": [
    "<all_urls>",
    "tabs",
    "storage",
    "contextMenus"
  ],

  "web_accessible_resources": [
    "images/*.png"
  ],

  "content_scripts":[
    {
      "matches": ["https://*.facebook.com/*"],
      "js":["jquery-3.1.1.min.js","myscripts.js", "d3.min.js"],
      "css": [ "style.css" ],
      "run_at": "document_end"
    }
  ]
}